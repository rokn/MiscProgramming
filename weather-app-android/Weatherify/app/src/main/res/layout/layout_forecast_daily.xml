<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="detailsModel"
            type="com.appolica.weatherify.android.ui.fragment.DetailedForecastViewModel"/>
    </data>

    <com.appolica.weatherify.android.ui.view.DailyLinearLayout
        android:id="@+id/daily_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:adapter="@{detailsModel.dailyAdapter}"/>
</layout>