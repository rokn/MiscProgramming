<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewTrashL"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/trash"/>

        <ImageView
            android:id="@+id/imageViewTrashCloseL"
            android:layout_width="18.5dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageViewTrashL"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/close_trash"/>

        <ImageView
            android:id="@+id/imageViewTrashR"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/trash"/>

        <ImageView
            android:id="@+id/imageViewTrashCloseR"
            android:layout_width="18.5dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageViewTrashR"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/close_trash"/>
    </RelativeLayout>
</merge>